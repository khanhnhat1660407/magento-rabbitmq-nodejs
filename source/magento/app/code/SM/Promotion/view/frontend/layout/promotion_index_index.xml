<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
        <block class="SM\Promotion\Block\Index\Index" name="promotion_index" template="SM_Promotion::Index/index.phtml" />
        <block class="SM\Promotion\Block\Widget\PromotionProduct" name="promotion_product" template="SM_Promotion::widget/promotionproduct.phtml">
            <arguments>
                <argument name="title" xsi:type="string">Promotion Products</argument>
                <argument name="enable_carousel" xsi:type="number">0</argument>
                <argument name="number_of_product" xsi:type="number">10</argument>
            </arguments>
        </block>
    </referenceContainer>
</page>